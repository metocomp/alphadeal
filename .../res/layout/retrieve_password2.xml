<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="#ff7920"
        >
        
        <TextView 
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="@string/reset_password"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_title_size"
            />
        
    </RelativeLayout>

    <EditText
        android:id="@+id/editTextCode"
        android:layout_width="match_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="18dp"
        android:layout_height="45dp"
        android:ems="11"
        android:hint="@string/enter_code_reset_password"
        android:textColorHint="#8f8f8f"
        android:textColor="#222222"
        android:textSize="@dimen/navbar_title_size">
        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="match_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="18dp"
        android:layout_height="45dp"
        android:ems="11"
        android:hint="@string/new_password"
        android:textColorHint="#8f8f8f"
        android:textColor="#222222"
        android:textSize="@dimen/navbar_title_size" 
        android:inputType="textPassword">
        </EditText>
    
    <EditText
        android:id="@+id/editTextRepeatNewPassword"
        android:layout_width="match_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="18dp"
        android:layout_height="45dp"
        android:ems="11"
        android:hint="@string/repeat_new_password"
        android:textColorHint="#8f8f8f"
        android:textColor="#222222"
        android:textSize="@dimen/navbar_title_size" 
        android:inputType="textPassword" >
    </EditText>
    
    <Button 
        android:layout_marginTop="20dp"
        android:id="@+id/verifyCodeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:onClick="ButtonClick"
        android:textSize="18sp"
        android:background="@drawable/red_button"
        style="@style/button_text"
        />
    
    <Button 
        android:layout_marginTop="20dp"
        android:id="@+id/sendCodeAgainButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resend_code"
        android:onClick="ButtonClick"
        android:textSize="18sp"
        android:background="@drawable/red_button"
        style="@style/button_text"
        />

</LinearLayout>
