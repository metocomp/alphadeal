<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="#ff7920"
        >
        
        <TextView 
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="@string/signup"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_title_size"
            />
        
        <Button
            android:id="@+id/rightBarButton"
            android:layout_width="80dp"
            android:layout_height="44dp"
            android:drawableRight="@drawable/btn_next_normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_button_text_size"
           	android:layout_alignParentRight="true"
           	android:drawablePadding="2dp"
			android:paddingRight="12dp"
			android:onClick="ButtonClick"
            />
    </RelativeLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:textColor="#222222"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:textSize="@dimen/navbar_button_text_size" 
        android:text="Please select the correct country or you won't be able to log in properly."
        android:textAppearance="?android:attr/textAppearanceLarge" />
 
    <Spinner
        android:id="@+id/country_spinner"
        android:layout_width="fill_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="#222222"
        android:layout_height="wrap_content"/>
 
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:text="@string/your_phone_num"
        android:textSize="@dimen/navbar_button_text_size" 
        android:textColor="#222222"/>

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="18dp"
        android:layout_height="45dp"
        android:ems="11"
        android:hint=""
        android:textColorHint="#8f8f8f"
        android:textColor="#222222"
        android:textSize="@dimen/navbar_title_size" 
        android:inputType="phone" >
        <requestFocus />
    </EditText>

</LinearLayout>
